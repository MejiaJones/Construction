generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           Int               @id @default(autoincrement())
  nombre       String
  email        String            @unique
  password     String
  rol          Rol
  proyectos    UsuarioProyecto[]
  tareas       Tarea[]           @relation("UsuarioTarea")
  horasTrabajo HorasTrabajo[]
}

model Proyecto {
  id          Int               @id @default(autoincrement())
  nombre      String
  descripcion String?
  usuarios    UsuarioProyecto[]
  tareas      Tarea[]
  materiales  Material[]
  creadoEn    DateTime          @default(now())
}

model UsuarioProyecto {
  id         Int      @id @default(autoincrement())
  usuario    Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId  Int
  proyecto   Proyecto @relation(fields: [proyectoId], references: [id])
  proyectoId Int

  @@unique([usuarioId, proyectoId])
}

model Tarea {
  id           Int            @id @default(autoincrement())
  titulo       String
  descripcion  String?
  estado       Estado         @default(PENDIENTE)
  usuario      Usuario        @relation("UsuarioTarea", fields: [usuarioId], references: [id])
  usuarioId    Int
  proyecto     Proyecto       @relation(fields: [proyectoId], references: [id])
  proyectoId   Int
  horasTrabajo HorasTrabajo[] // <--- Relación inversa añadida aquí
}

enum Estado {
  PENDIENTE
  EN_PROGRESO
  COMPLETADA
}

enum Rol {
  ADMIN
  USUARIO
}

model Material {
  id         Int      @id @default(autoincrement())
  nombre     String
  cantidad   Int
  unidad     String
  costo      Float
  proyecto   Proyecto @relation(fields: [proyectoId], references: [id])
  proyectoId Int
}

model HorasTrabajo {
  id        Int      @id @default(autoincrement())
  horas     Int
  fecha     DateTime @default(now())
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  tarea     Tarea    @relation(fields: [tareaId], references: [id])
  tareaId   Int
}
